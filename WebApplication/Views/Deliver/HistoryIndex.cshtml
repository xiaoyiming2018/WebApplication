@{
    @model IList<Model.Purchase>
    @using Model;
    @using BLL;

}
@using AspNetCoreMvcPager;
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
    <link rel="stylesheet" type="text/css" href="~/assets/css/sweetalert.css">
    <script type="text/javascript" src="~/assets/js/sweetalert-dev.js"></script>
    <script type="text/javascript" src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script type="text/javascript" src="~/My97DatePicker/WdatePicker.js"></script>
    <script type="text/javascript">
        $(function () {
            $(".sidebar ul li:nth-of-type(2)").addClass("active open")
            $(".sidebar ul li:nth-of-type(2) ul li:nth-of-type(2)").removeClass()
            $(".sidebar ul li:nth-of-type(2) ul li:nth-of-type(3)").addClass("active")
            
        });

        function confirmTiShi(id) {
            swal({
                title: "是否取消确认 ?",
                text: "",
                type: "warning",
                showCancelButton: true,
                confirmButtonColor: "#DD6B55",
                confirmButtonText: "是",
                cancelButtonText: "否",
                closeOnConfirm: false,//true表示不需要点击确认,fasle需要点击确认后再关闭对话框
                closeOnCancel: false //true表示不需要点击确认,fasle需要点击确认后再关闭对话框
            },
                function (isConfirm) {
                    if (isConfirm) {
                        $.ajax({
                            type: "POST",
                            url: "/Deliver/SupplierConfirm?id="+id+"",
                            beforeSend: function (xhr) {
                                xhr.setRequestHeader("XSRF-TOKEN",
                                    $('input:hidden[name="__RequestVerificationToken"]').val());
                            },
                            data: {
                                id: id
                            },
                            success: function (msg) {
                                if (msg == "Success") {
                                    swal({ title: "已取消 !", text: "", type: "success" },
                                        function () { window.location.href = '/Deliver/HistoryIndex'; });
                                }
                                else {
                                    swal("执行失败 !", "", "error");
                                }
                            },
                            error: function (msg) {
                                swal("数据获取失败 !", "", "error");
                            }
                        });
                    }
                    else {
                        swal("操作已终止 !", "该记录已保留 !", "error");
                    }
                });
        }

    </script>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12 p-0">
                <div class="page-header">
                    <div class="page-title">
                        <ol class="breadcrumb text-left">
                            <li><a href="/Supplier/Index">主页</a></li>
                            <li><a href="/Deliver/HistoryIndex">历史购入清单</a></li>

                        </ol>
                    </div>
                </div>
            </div><!-- /# column -->
        </div><!-- /# row -->
        <div class="main-content">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card alert">
                        <div class="card-header">
                            <form class="form-horizontal" action="/Deliver/HistoryIndex" method="post" id="myfrom">
                                <div class="form-inline">
                                    <div class="form-group">
                                        <label>购入单号：</label>
                                        <input id="purchase_index" name="purchase_index" type="text" class="form-control" style="height:36px" value="@ViewBag.purchase_index" />
                                    </div>
                                    <div class="form-group">
                                        <label>供应商名称：</label>
                                        <input id="company_name" name="company_name" type="text" class="form-control" style="height:36px" value="@ViewBag.company_name" />
                                    </div>

                                    <div class="form-group">
                                        <label>送货单号：</label>
                                        <input id="deliver_index" name="deliver_index" type="text" class="form-control" style="height:36px" value="@ViewBag.deliver_index" />
                                    </div>
                                    <div class="form-group">
                                        <label>物料名称：</label>
                                        <input id="material_name" name="material_name" type="text" class="form-control" style="height:36px" value="@ViewBag.material_name" />
                                    </div>


                                </div>
                                <br />
                                <div class="form-inline">
                                    <div class="form-group">
                                        <label>开始时间：</label>
                                        <input id="start_time" name="start_time" type="text" class="form-control" style="height:36px" onclick="WdatePicker({ skin: 'whyGreen',dateFmt:'yyyy-MM-dd' })" value="@ViewBag.start_time" />
                                    </div>
                                    <div class="form-group">
                                        <label>结&nbsp;&nbsp;束&nbsp;时&nbsp;间：</label>
                                        <input id="end_time" name="end_time" type="text" class="form-control" style="height:36px" onclick="WdatePicker({ skin: 'whyGreen',dateFmt:'yyyy-MM-dd' })" value="@ViewBag.end_time" />
                                    </div>
                                    <div class="form-group">
                                        <input type="submit" value="查询" class="btn btn-primary" style="width:80px" />
                                    </div>

                                </div>
                                <br />


                            </form>
                        </div>
                        <div class="card-body">
                            <table class="table table-responsive table-hover ">
                                <thead>
                                    <tr>
                                        <th>编号</th>
                                        <th>购入单号</th>
                                        <th>供应商</th>
                                        <th>分类</th>
                                        <th>送货单号</th>
                                        <th>送货时间</th>
                                        <th>物料名称</th>
                                        <th>物料规格</th>
                                        <th>购入数量</th>
                                        <th>物料单位</th>
                                        @if (UserManager.Current.GetLevel >= UserLevelEnum.ProductManager)
                                        {
                                            <th>单价</th>
                                            <th>总价</th>
                                            <th>结款与否</th>
                                            <th>结款方式</th>
                                            <th>确认时间</th>
                                        }
                                        @if (UserManager.Current.GetLevel >= UserLevelEnum.Developer)
                                        {
                                            <th>取消确认</th>
                                        }
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        int index = 1;
                                        foreach (var item in Model)
                                        {
                                    <tr>
                                        <td>@index</td>
                                        <td>@item.purchase_index</td>
                                        <td>@item.company_name</td>
                                        <td>@item.category</td>
                                        <td>@item.deliver_index</td>
                                        <td>@item.deliver_time.ToString("yyyy-MM-dd")</td>
                                        <td>@item.material_name</td>
                                        <td>@item.material_spec</td>
                                        <td>@item.material_num</td>
                                        <td>@item.material_unit</td>
                                        @if (UserManager.Current.GetLevel >= UserLevelEnum.ProductManager)
                                        {
                                            <td>@item.material_price</td>
                                            <td>@item.material_all_price</td>
                                            @if (item.money_onoff == 0)
                                            {
                                                <td style="color:red">未结款</td>
                                            }
                                            else
                                            {
                                                <td style="color:green"> 已结款</td>
                                            }
                                            @if (item.money_way == 0)
                                            {
                                                <td></td>
                                            }
                                            else if (item.money_way == 1)
                                            {
                                                <td style="color:green">月结</td>
                                            }
                                            else if (item.money_way == 2)
                                            {
                                                <td style="color:green">现金</td>
                                            }
                                            else
                                            {
                                                <td style="color:green">小额支付</td>
                                            }
                                            <td>@item.confirm_time.ToString("yyyy-MM-dd HH:mm:ss")</td>
                                        }
                                        @if (UserManager.Current.GetLevel >= UserLevelEnum.Developer)
                                        {
                                            <td>
                                                <input type="button" class="btn btn-default" onclick="confirmTiShi(@item.id)" value="取消确认" />
                                            </td>
                                        }

                                    </tr>
                                            index++;
                                        }
                                    }
                                </tbody>
                            </table>
                            <div class="page-nav" id="pageIndex">@Html.Raw(PagerHtmlString.Pager(ViewBag.model, "Deliver", "HistoryIndex", true))</div>
                        </div>
                    </div><!-- /# card -->
                </div><!-- /# column -->
            </div><!-- /# row -->
        </div>
    </div><!-- /# container-fluid -->
</body>
</html>


