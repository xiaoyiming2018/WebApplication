@{
    @model IList<Model.Company>
}
@using AspNetCoreMvcPager;
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
    <link href="~/js/dist/css/bootstrap-select.min.css" rel="stylesheet" />

    <script src="~/assets/js/lib/bootstrap.min.js"></script>
    <script src="~/js/dist/js/bootstrap-select.min.js"></script>
    <script type="text/javascript">
        $(function () {
            $(".sidebar ul li:nth-of-type(3)").addClass("active open")
            $(".sidebar ul li:nth-of-type(3) ul li:nth-of-type(1)").addClass("active")
        });
        function deleteTiShi(id) {
            swal({
                title: "确定删除 ?",
                text: "删除后将无法恢复 !",
                type: "warning",
                showCancelButton: true,
                confirmButtonColor: "#DD6B55",
                confirmButtonText: "删除",
                cancelButtonText: "取消",
                closeOnConfirm: false,//true表示不需要点击确认,fasle需要点击确认后再关闭对话框
                closeOnCancel: false //true表示不需要点击确认,fasle需要点击确认后再关闭对话框
            },
                function (isConfirm) {
                    if (isConfirm) {
                        $.ajax({
                            type: "POST",
                            url: "/Customer/Del?id=" + id + "",
                            beforeSend: function (xhr) {
                                xhr.setRequestHeader("XSRF-TOKEN",
                                    $('input:hidden[name="__RequestVerificationToken"]').val());
                            },
                            data: {
                                id: id
                            },
                            success: function (msg) {
                                if (msg == "Success") {
                                    swal({ title: "已删除 !", text: "该条记录已删除 !", type: "success" },
                                        function () { window.location.href = '/Customer/Index'; });
                                }
                                else if (msg == "Existence") {
                                    swal("执行失败 !", "现有订单中已关联该客户，请先删除对应的订单号!", "error");
                                }
                                else 
                                {
                                    swal("执行失败 !", "该记录已保留 !", "error");
                                }
                            },
                            error: function (msg) {
                                swal("数据获取失败 !", "该记录已保留 !", "error");
                            }
                        });
                    }
                    else {
                        swal("已取消 !", "该记录已保留 !", "error");
                    }
                });
        }
    </script>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12 p-0">
                <div class="page-header">
                    <div class="page-title">
                        <ol class="breadcrumb text-left">
                            <li><a href="/Supplier/Index">主页</a></li>
                            <li><a href="/Customer/Index">客户管理</a></li>
                            <li class="active">客户信息</li>
                        </ol>
                    </div>
                </div>
            </div><!-- /# column -->
        </div><!-- /# row -->
        <div class="main-content">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card alert">
                        <div class="card-header">
                            <form class="form-inline" action="/Customer/Index" method="post" id="myfrom">
                                <div class="form-group">
                                    <label>公司名称：</label>
                                    <select class="selectpicker" data-live-search="true" data-live-search-placeholder="搜索" id="company_name" name="company_name" style="padding:6px 50px">
                                        <option value=""></option>
                                        @{
                                            CompanyManager CM = new CompanyManager();
                                            List<Company> objList = CM.SelectAll(type: 0);
                                            if (objList.Count > 0)
                                            {
                                                for (int i = 0; i < objList.Count; i++)
                                                {
                                                    <!option value="@objList[i].company_name" @if (Model != null) { if (objList[i].company_name == ViewBag.company_name) { <text> selected</text>}}>@objList[i].company_name</!option>
                                                }
                                            }
                                        }
                                    </select>

                                </div>
                                @if (UserManager.Current.GetLevel >= UserLevelEnum.ProductManager)
                                {
                                    <div class="form-group">
                                        <label>开户行：</label>
                                        <input id="bank" name="bank" type="text" class="form-control" value="@ViewBag.bank" />
                                    </div>
                                }
                                <div class="form-group">
                                    <input type="submit" value="查询" class="btn btn-primary" />
                                </div>
                                <div class="form-group">
                                    @if (UserManager.Current.GetLevel >= UserLevelEnum.Boss)
                                    {
                                        <input type="button" value="新增" class="btn btn-primary" onclick="window.location.href = '/Customer/Edit'" />
                                    }

                                </div>
                            </form>
                        </div>
                        <div class="card-body">
                            <table class="table table-responsive table-hover ">
                                <thead>
                                    <tr>
                                        <th>编号</th>
                                        <th>公司名称</th>
                                        @if (UserManager.Current.GetLevel >= UserLevelEnum.ProductManager)
                                        {
                                            <th>税号</th>
                                        }
                                        <th>地址</th>
                                        @if (UserManager.Current.GetLevel >= UserLevelEnum.ProductManager)
                                        {
                                            <th>银行账号</th>
                                            <th>开户行</th>
                                            <th>联系信息</th>
                                        }
                                        @if (UserManager.Current.GetLevel >= UserLevelEnum.Boss)
                                        {
                                            <th>编辑</th>
                                            <th>删除</th>
                                        }
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                    int index = 1;
                                    foreach (var item in Model)
                                    {
                                    <tr>
                                        <td>@index</td>
                                        <td>@item.company_name</td>
                                        @if (UserManager.Current.GetLevel >= UserLevelEnum.ProductManager)
                                        {
                                            <td>@item.tax_num</td>

                                        }
                                        <td>@item.address</td>
                                        @if (UserManager.Current.GetLevel >= UserLevelEnum.ProductManager)
                                        {
                                            <td>@item.account</td>
                                            <td>@item.bank</td>
                                            <td>
                                                <input type="button" class="btn btn-primary" onclick="window.location.href = '/Contact/Index?customer_id=@item.id&type=@item.company_type'" value="查看详情" />
                                            </td>

                                        }
                                        @if (UserManager.Current.GetLevel >= UserLevelEnum.Boss)
                                        {
                                            <td>
                                                <input type="button" class="btn btn-primary" onclick="window.location.href = '/Customer/Edit?id=@item.id'" value="编辑" />
                                            </td>

                                            <td>
                                                <input type="button" class="btn btn-primary" onclick="deleteTiShi(@item.id)" value="删除" />
                                            </td>
                                        }
                                    </tr>
                                            index++;
                                        }
                                    }
                                </tbody>
                            </table>
                            <div class="page-nav" id="pageIndex">@Html.Raw(PagerHtmlString.Pager(ViewBag.model, "Customer", "Index", true))</div>
                        </div>
                    </div><!-- /# card -->
                </div><!-- /# column -->
            </div><!-- /# row -->
        </div>
    </div><!-- /# container-fluid -->
</body>
</html>


