@{
    Layout = null;
    @model IList<Model.Order>;
}
<table class="table table-responsive table-hover ">
    <thead>
        <tr>
            <th>序号</th>
            <th hidden>实际序号</th>
            <th>名称规格</th>
            <th>订单数量</th>
            <th>单位</th>
            @if (UserManager.Current.GetLevel >= UserLevelEnum.ProductManager)
            {
                <th>单价</th>
                <th>金额</th>
            }
            <th hidden>剩余数量</th>
            <th>剩余数量</th>
            <th>出货数量</th>
            @if (UserManager.Current.GetLevel >= UserLevelEnum.ProductManager)
            {
                <th>出货单价</th>
                <th>出货总价</th>
            }
            <th>备注</th>

        </tr>
    </thead>
    <tbody>
        @{
            int index = 1;
            foreach (var item in Model)
            {
        <tr>
            <td>@index</td>
            <td hidden><input type="text" name="seq_id" style="width:100px" value="@item.seq_id" /></td>
            <td>@item.order_name</td>
            <td>@item.order_num</td>
            <td>@item.unit</td>
            @if (UserManager.Current.GetLevel >= UserLevelEnum.ProductManager)
            {
                <td>@item.order_price</td>
                <td>@item.order_all_price</td>
            }

            <td hidden><input type="text" name="remain_num" style="width:100px" value="@item.remain_num" /></td>
            <td>@item.remain_num</td>

            <td>
                @if (item.remain_num == 0)
                {
                    <input type="text" name="real_num" style="width:100px;border:none;outline:none;" value="出货已完成" readonly />
                }
                else
                {
                    <input type="text" name="real_num" style="width:100px;border-right-style: none;border-left-style: none;border-top-style: none;" />
                }

            </td>
            @if (UserManager.Current.GetLevel >= UserLevelEnum.ProductManager)
            {
                <td>
                    @if (item.remain_num == 0)
                    {
                        <input type="text" name="deliver_price" style="width:100px;border:none;outline:none;" value="出货已完成" readonly />
                    }
                    else
                    {
                        <input type="text" name="deliver_price" style="width:100px;border-right-style: none;border-left-style: none;border-top-style: none;" />
                    }

                </td>
                <td>
                    @if (item.remain_num == 0)
                    {
                        <input type="text" name="deliver_all_price" style="width:100px;border:none;outline:none;" value="出货已完成" readonly />
                    }
                    else
                    {
                        <input type="text" name="deliver_all_price" style="width:100px;border-right-style: none;border-left-style: none;border-top-style: none;" />
                    }

                </td>
            }
            <td><input type="text" name="remark" style="width:100px;border-right-style: none;border-left-style: none;border-top-style: none;" /></td>
        </tr>
                index++;
            }
        <tr><td ><input id="inputNum" name="inputNum" value="@(index-1)" hidden/></td></tr>
        } 
    </tbody>
</table>
