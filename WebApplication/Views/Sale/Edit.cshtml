@{
    @model IList<Model.Sale>;
    @using Model;
    @using BLL;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />

    <title></title>
    @*<link href="~/assets/css/lib/bootstrap.min.css" rel="stylesheet">*@
    <link href="~/js/dist/css/bootstrap-select.min.css" rel="stylesheet" />

    <script src="~/assets/js/lib/bootstrap.min.js"></script>
    <script src="~/js/dist/js/bootstrap-select.min.js"></script>
    <script type="text/javascript" src="~/My97DatePicker/WdatePicker.js"></script>

    <script type="text/javascript">
        $(function () {
            $(".sidebar ul li:nth-of-type(5)").addClass("active open")
            $(".sidebar ul li:nth-of-type(5) ul li").removeClass()
            $(".sidebar ul li:nth-of-type(5) ul li:nth-of-type(1)").addClass("active")
            $('#submit').click(function () {
                var flag = 0;
                var deliver_index = document.getElementById('deliver_index').value;
                var deliver_company_head = document.getElementById('deliver_company_head').value;
                var order_id = document.getElementById('order_id').value;
                if (deliver_index == "" || deliver_company_head == "") {
                    swal("信息不能为空！", "", "error");
                }
                else if (order_id <= 0) {
                    swal("订单号有误！", "您所填的订单号不存在！", "error");
                }
                else {
                    var inputNum = document.getElementById('inputNum').value;

                    var seq_idList = document.getElementsByName("seq_id");
                    var remain_numList = document.getElementsByName("remain_num");
                    var real_numList = document.getElementsByName("real_num");
                    var real_timeList = document.getElementsByName("real_time");
                    var deliver_priceList = document.getElementsByName("deliver_price");
                    var deliver_all_priceList = document.getElementsByName("deliver_all_price");
                    var remarkList = document.getElementsByName("remark");

                    var seq_id = new Array();
                    var real_num = new Array();
                    var real_time = new Array();
                    var deliver_price = new Array();
                    var deliver_all_price = new Array();
                    var remark = new Array();
                    for (var i = 0; i < real_numList.length; i++) {
                        seq_id.push(seq_idList[i].value);
                        real_num.push(real_numList[i].value);
                        real_time.push(real_timeList[i].value);
                        deliver_price.push(deliver_priceList[i].value);
                        deliver_all_price.push(deliver_all_priceList[i].value);
                        remark.push(remarkList[i].value);
                        if (parseInt(real_numList[i].value) > parseInt(remain_numList[i].value)) {
                            flag = 1;
                        }
                    }

                    var Seq_Id = seq_id.join(',');
                    var Real_Num = real_num.join(',');
                    var Real_Time = real_time.join(',');
                    var Deliver_Price = deliver_price.join(',');
                    var Deliver_All_Price = deliver_all_price.join(',');
                    var Remark = remark.join(',');

                    if (flag == 1) {
                        swal("出货数量超过剩余数量！", "", "error");
                    }
                    else {
                        $.ajax({
                            type: "POST",
                            url: "/Sale/EditHandle",
                            beforeSend: function (xhr) {
                                xhr.setRequestHeader("XSRF-TOKEN",
                                    $('input:hidden[name="__RequestVerificationToken"]').val());
                            },
                            data: {
                                inputNum: inputNum, deliver_index: deliver_index, deliver_company_head: deliver_company_head, order_id: order_id,
                                Seq_Id: Seq_Id, Real_Num: Real_Num, Real_Time: Real_Time, Deliver_Price: Deliver_Price, Deliver_All_Price: Deliver_All_Price, Remark: Remark
                            },
                            success: function (msg) {
                                if (msg == "Success") {
                                    swal({ title: "执行成功!", text: "", type: "success" },
                                        function () { window.location.href = '/Sale/Edit?deliver_index=@ViewBag.deliver_index'; });

                                }
                                else {
                                    swal("执行失败，请检查提交文件内容！", "", "error");
                                }
                            },
                            error: function (msg) {
                                swal("数据获取失败！", "", "error");
                            }
                        });
                    }
                }
            });
        });

        function getOrderList() {
            var order_id = $('#order_id').val();
            if (order_id > 0) {
                $.ajax({
                    type: "POST",
                    url: "/Sale/GetOrderList",
                    data: { order_id: order_id },
                    success: function (msg) {
                        $('#order_div').html(msg);
                    },
                    error: function (msg) {
                        swal("获取订单失败！", "请重新操作！", "error");
                    }
                });
            }
        }

        function doPrint() {
            window.print();
            return false;
        };

        window.onbeforeprint = function () {

            $(".sidebar").hide()
            $(".header").hide()
            $("#Data1").show()
            $("#wrap").hide()
            $(".sidebar.sidebar-shrink ~ .content-wrap").css("margin-left", 0)
        }
        window.onafterprint = function () {
            $("#Data1").hide()
            $("#wrap").show()
            $(".sidebar").show()
            $(".header").show()
            $(".sidebar.sidebar-shrink ~ .content-wrap").css("margin-left", "250px")
        }
    </script>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="page-header">
                    <div class="page-title">
                        <ol class="breadcrumb text-left">
                            <li><a href="/Supplier/Index">主页</a></li>
                            <li><a href="/Sale/Index">销售管理</a></li>
                            <li><a href="/Sale/Index">销售出货开单</a></li>
                            <li class="active">
                                出货开单
                            </li>
                        </ol>
                    </div>
                </div>
            </div><!-- /# column -->
        </div><!-- /# row -->
        <div class="main-content">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card alert">
                        <div class="card-header">
                            <h4>
                                出货开单
                            </h4>
                        </div>
                        <br />
                        <div class="card-body">
                            <div class="basic-form">
                                <div class="form-horizontal">                                   
                                        <div class="form-group">
                                            <label for="example-input-normal" class="col-sm-4 control-label">出货单号</label>
                                            <div class="col-sm-3">
                                                <input type="text" class="form-control" id="deliver_index" name="deliver_index" value="@ViewBag.deliver_index" style="width:220px" readonly />
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label for="example-input-normal" class="col-sm-4 control-label">出货公司抬头</label>
                                            <div class="col-sm-3">
                                                <select class="selectpicker" data-live-search="true" data-live-search-placeholder="搜索" id="deliver_company_head" name="deliver_company_head">
                                                    <option value=""></option>
                                                    @{
                                                        SettingManager SM = new SettingManager();
                                                        List<Setting> sList = SM.SelectConfigList(6);
                                                        if (sList.Count > 0)
                                                        {
                                                            for (int i = 0; i < sList.Count; i++)
                                                            {
                                                                <!option value="@sList[i].config_list" @if (Model != null) { if (sList[i].config_list == ViewBag.deliver_company_head) { <text>selected</text>} }>@sList[i].config_list</!option>
                                                            }
                                                        }
                                                    }
                                                </select>

                                            </div>
                                    </div>
                                    
                                    <div class="form-group">
                                        <label for="example-input-normal" class="col-sm-4 control-label">订单号</label>
                                        <div class="col-sm-3">
                                            <select class="selectpicker" data-live-search="true" data-live-search-placeholder="搜索" id="order_id" name="order_id" onchange="getOrderList();">
                                                <option value=""></option>
                                                @{
                                                    OrderManager OM = new OrderManager();
                                                    List<Order> objList = OM.SelectForSaleAll(0);
                                                    if (objList.Count > 0)
                                                    {
                                                        for (int i = 0; i < objList.Count; i++)
                                                        {
                                                            <!option value="@objList[i].id">@objList[i].order_index</!option>
                                                        }
                                                    }
                                                }
                                            </select>
                                        </div>
                                    </div>
                                    
                                    <div class="form-horizontal" id="order_div">
                                    </div>
                                    <div class="form-group">
                                        <div class="col-sm-offset-5">
                                            <input type="button" id="submit" name="submit" class="btn btn-primary" style=" width:12%" value="提交" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div><!-- /# card -->
                </div><!-- /# column -->

                <div class="col-lg-12">
                    <div class="card alert">
                        <div class="card-header">
                            <h4>
                                已出货订单
                            </h4>
                            <input type="hidden" value="@ViewBag.deliver_index" id="deliver_index" name="deliver_index" />
                            <div class="form-inline">
                                <div class="card-header-right-icon">
                                    @if (UserManager.Current.GetLevel >= UserLevelEnum.ProductManager)
                                    {
                                        <div class="form-group">
                                            <input type="button" value="出货单打印" class="btn btn-primary" onclick="doPrint()" style="width:100px" />
                                        </div>
                                    }
                                </div>
                            </div>
                            <br />
                        </div>
                        <hr />
                        <div class="card-body">
                            @if (Model!=null)
                            {
                                <table class="table table-responsive table-hover ">
                                <thead>
                                    <tr>
                                        <th>序号</th>
                                        <th>订单号</th>
                                        <th>名称规格</th>
                                        <th>单位</th>
                                        <th>出货数量</th>
                                        @if (UserManager.Current.GetLevel >= UserLevelEnum.ProductManager)
                                        {
                                            <th>单价</th>
                                            <th>金额</th>

                                        }
                                        <th>备注</th>
                                        <th>编辑</th>
                                        <th>删除</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        int index = 1;
                                        foreach (var item in Model)
                                        {
                                    <tr>
                                        <td>@index</td>
                                        <td>@item.order_name</td>
                                        <td>@item.order_num</td>
                                        <td>@item.order_time.ToString("yyyy-MM-dd")</td>
                                        <td>@item.deliver_time.ToString("yyyy-MM-dd")</td>

                                        <td>@item.real_num</td>
                                        <td>@item.real_time.ToString("yyyy-MM-dd")</td>
                                        @if (UserManager.Current.GetLevel >= UserLevelEnum.ProductManager)
                                        {
                                            <td>@item.deliver_price</td>
                                            <td>@item.deliver_all_price</td>
                                            <td>@item.purchase_person</td>
                                            <td>@item.unit</td>
                                            <td>
                                                <input type="button" class="btn btn-primary" onclick="window.location.href = '/OrderSeq/Edit?order_id=@item.id&seq_id=@item.seq_id'" value="编辑" />
                                            </td>
                                        }
                                        @if (UserManager.Current.GetLevel >= UserLevelEnum.Boss)
                                        {
                                            <td>
                                                <input type="button" class="btn btn-primary" onclick="deleteTiShi(@item.id,@item.seq_id)" value="删除" />
                                            </td>
                                        }

                                    </tr>
                                            index++;
                                        }
                                    }
                                </tbody>
                                </table>
                            }
                            
                        </div>
                    </div><!-- /# card -->
                </div><!-- /# column -->
            </div><!-- /# row -->
        </div>
    </div><!-- /# container-fluid -->

    @if (Model !=null)
    {
    <div class="card alert" id="Data1" style="margin: 30px;display: none">

        <div class="card-body">
            <table class="table" border="0" cellspacing="0" cellpadding="0">
                <tbody>
                    <tr style="font-weight:bold">
                        <td style="font-size:30px;text-align:center;padding:2px;border:0;" colspan="6">昆山市欧锐吉五金商行</td>
                    </tr>
                    <tr style="font-weight:bold">
                        <td style="font-size:20px;text-align:center;padding:2px;border:0;" colspan="6">送货单</td>
                    </tr>
                    <tr>
                        <td style="padding:2px;border:0;text-align:left"></td>
                        <td style="padding:2px;border:0;text-align:left"></td>
                        <td style="padding:2px;border:0;"></td>
                        <td style="padding:2px;border:0;"></td>
                        <td style="padding:2px;border:0;text-align:right"></td>
                        <td style="padding:2px;border:0;text-align:right"></td>
                    </tr>
                    <tr>
                        <td style="padding:2px;border:0;text-align:left">出货单号：</td>
                        <td style="padding:2px;border:0;text-align:left">@ViewBag.deliver_index</td>
                        <td style="padding:2px;border:0;"></td>
                        <td style="padding:2px;border:0;"></td>
                        <td style="padding:2px;border:0;text-align:right"></td>
                        <td style="padding:2px;border:0;text-align:right"></td>
                    </tr>
                    <tr>
                        <td style="padding:2px;border:0;text-align:left">出货公司抬头：</td>
                        <td style="padding:2px;border:0;text-align:left">@ViewBag.deliver_company_head</td>
                        <td style="padding:2px;border:0;"></td>
                        <td style="padding:2px;border:0;"></td>
                        <td style="padding:2px;border:0;text-align:right">制单人员：</td>
                        <td style="padding:2px;border:0;text-align:right">@UserManager.Current.GetLoginName</td>
                    </tr>
                    <tr>
                        <td style="padding:2px;border:0;text-align:left">客户名称：</td>
                        <td style="padding:2px;border:0;text-align:left">@ViewBag.company_name</td>
                        <td style="padding:2px;border:0;">客户订单号：</td>
                        <td style="padding:2px;border:0;">@ViewBag.company_order_index</td>
                        <td style="padding:2px;border:0;text-align:right">送货日期：</td>
                        <td style="padding:2px;border:0;text-align:right">@(DateTime.Now.ToLocalTime().ToString("yyyy-MM-dd HH:ss:mm"))</td>
                    </tr>
                </tbody>
            </table>

            <table class="table table-responsive table-hover ">
                <thead>
                    <tr>
                        <th>序号</th>
                        <th>订单号</th>
                        <th>名称规格</th>
                        <th>单位</th>
                        <th>数量</th>
                        <th>单价</th>
                        <th>金额</th>
                        <th>备注</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        int index1 = 1;
                        foreach (var item in Model)
                        {
                    <tr>
                        <td>@index1</td>
                        <td>@item.order_index</td>
                        <td>@item.order_name</td>
                        <td>@item.real_num</td>
                        <td>@item.deliver_price</td>
                        <td>@item.deliver_all_price</td>
                        <td>@item.remark</td>
                    </tr>
                            index1++;
                        }
                    }
                </tbody>
            </table>
            <label for="example-input-normal">注：以上货品请校对数量，如有质量问题，请在收货后3天内通知本公司，逾期数不负责。</label>
            <br />
            <table class="table" border="0" cellspacing="0" cellpadding="0">
                <tbody>
                    <tr>
                        <td style="padding:2px;border:0;">客户签收：</td>
                        <td style="padding:2px;border:0;">制作：@UserManager.Current.GetLoginName;</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
    }
    
</body>
</html >


