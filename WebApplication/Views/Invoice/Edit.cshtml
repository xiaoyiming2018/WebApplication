@{
    @model Model.Invoice;
    @using Model;
    @using BLL;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
    <link rel="stylesheet" type="text/css" href="~/assets/css/sweetalert.css">
    <script type="text/javascript" src="~/assets/js/sweetalert-dev.js"></script>
    <script type="text/javascript" src="~/My97DatePicker/WdatePicker.js"></script>
    <script type="text/javascript" src="~/Scripts/jquery-1.10.2.min.js"></script>

    <script type="text/javascript">
        var TempArr = [];//存储option

        $(function () {
            $(".sidebar ul li:nth-of-type(6)").addClass("active open")
            $(".sidebar ul li:nth-of-type(6) ul li:nth-of-type(1)").addClass("active")
            $('#submit').click(function () {
                var id = $('#id').val();
                var order_id = $('#order_id').val();
                var invoice_type = $('#invoice_type').val();
                var invoice_index = $('#invoice_index').val();
                var invoice_time = $('#invoice_time').val();
                var invoice_price = $('#invoice_price').val();
                var invoice_ratio = $('#invoice_ratio').val();
                var invoice_all_price = $('#invoice_all_price').val();
                var pay_type = $('#pay_type').val();
                var remark = $('#remark').val();
   
                if ( invoice_type == "" || invoice_index == "" || invoice_time == ""
                    || invoice_price == "" || invoice_ratio == "" || invoice_all_price == "" || pay_type == "") {
                    swal("信息不能为空！","请将信息填充完整！","error");
                }
                else if (order_id <= 0)
                {
                    swal("订单号有误！", "只能填写右侧存在的订单号！", "error");
                }
                else {
                    $.ajax({
                        type: "POST",
                        url: "/Invoice/EditHandle",
                        beforeSend: function (xhr) {
                            xhr.setRequestHeader("XSRF-TOKEN",
                                $('input:hidden[name="__RequestVerificationToken"]').val());
                        },
                        data: {
                            id: id, order_id: order_id, invoice_type: invoice_type, invoice_index: invoice_index, invoice_time: invoice_time,
                            invoice_price: invoice_price, invoice_ratio: invoice_ratio, invoice_all_price: invoice_all_price, pay_type: pay_type, remark: remark},
                        success: function (msg) {
                            if (msg == "Success") {
                                swal({ title: "执行成功!", text: "", type: "success" },
                                    function () { window.location.href = '/Invoice/Index'; }); 
                                
                            }
                            else if (msg == "Fail") {
                                swal("执行失败！", "", "error");
                            }
                            else {
                                swal("型号已存在！", "", "error");
                            }
                        },
                        error: function (msg) {
                            swal("数据获取失败！", "", "error");
                        }
                    });
                }

            });
        });

        function getPriceList() {
            var invoice_price = $('#invoice_price').val()
            var invoice_ratio = $('#invoice_ratio').val()
            if (invoice_price >= 0 && invoice_ratio>=0) {
                $.ajax({
                    type: "POST",
                    url: "/Invoice/GetPriceList",
                    data: { invoice_price: invoice_price, invoice_ratio: invoice_ratio },
                    success: function (msg) {
                        $('#price_div').html(msg);
                    },
                    error: function (msg) {
                        swal("获取规格失败！", "请重新操作！", "error");
                    }
                });
            }
        }

        function getOrderList() {
            var order_id = $('#order_id').val()
            if (order_id > 0) {
                $.ajax({
                    type: "POST",
                    url: "/Invoice/GetOrderList",
                    data: { order_id: order_id },
                    success: function (msg) {
                        $('#order_div').html(msg);
                    },
                    error: function (msg) {
                        swal("获取订单失败！", "请重新操作！", "error");
                    }
                });
            }
        }

        function SelectTip(flag) {
            var TxtObj = document.getElementById("txtPlace");
            var SelectObj = document.getElementById("order_id")
            var Arr = []
            with (SelectObj) {
                var SelectHTML = innerHTML.match(/<[^>]*>/)[0]
                for (i = 0; i < TempArr.length; i++)
                    if (TempArr[i][0].indexOf(TxtObj.value, 0) >= 0 || flag)//若找到以txt的内容开头的，添加option。若flag为true，对下拉框初始化
                        Arr[Arr.length] = "<option value='" + TempArr[i][1] + "'>" + TempArr[i][0] + "</option>"
                innerHTML = SelectHTML + Arr.join() + "</SELECT>"
            }
        }

        function Init() {
            var SelectObj = document.getElementById("order_id");
            /*先将数据存入数组*/
            with (SelectObj)
            for (i = 0; i < length; i++)
                TempArr[i] = [options[i].text, options[i].value];
        }
    </script>
</head>
<body onload="Init()">
    <div class="container-fluid">
        <div class="row">

            <div class="col-lg-12">
                <div class="page-header">
                    <div class="page-title">
                        <ol class="breadcrumb text-left">
                            <li><a href="/Supplier/Index">主页</a></li>
                            <li><a href="/Invoice/Index">财务管理</a></li>
                            <li class="active">
                                发票录入
                            </li>
                        </ol>
                    </div>
                </div>
            </div><!-- /# column -->
        </div><!-- /# row -->
        <div class="main-content">
            <div class="row" id="order_div">

            </div>

            @if (Model != null)
            {
                <div class="row">
                    <div class="col-lg-12">
                        <div class="card alert">
                            <div class="card-header">
                                <h4>
                                    订单详情
                                </h4>
                            </div>
                            <br />
                            <div class="card-body">
                                <div class="basic-form">
                                    <div class="form-horizontal">
                                        <input type="hidden" class="form-control" id="id" name="id" value="@Model.id" readonly />
                                        <div class="form-group">
                                            <label for="example-input-normal" class="col-sm-2 control-label">客户公司</label>
                                            <div class="col-sm-3">
                                                <input type="text" class="form-control" id="company_name" name="company_name" value="@ViewBag.company_name" readonly />
                                            </div>
                                            <label for="example-input-normal" class="col-sm-2 control-label">客户订单号</label>
                                            <div class="col-sm-3">
                                                <input type="text" class="form-control" id="company_order_index" name="company_order_index" value="@ViewBag.company_order_index" readonly />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <table class="table table-responsive table-hover ">
                                    <thead>
                                        <tr>
                                            <th>序号</th>
                                            <th>下单明细</th>
                                            <th>下单时间</th>
                                            <th>下单数量</th>
                                            <th>退单数量</th>
                                            @if (UserManager.Current.GetLevel >= UserLevelEnum.ProductManager)
                                            {
                                                <th>订单单价</th>
                                                <th>订单总价</th>
                                                <th>出货总价</th>
                                                <th>客户采购员</th>
                                                <th>需求单位</th>
                                            }


                                        </tr>
                                    </thead>
                                    <tbody>
                                        @{
                                            int index = 1;
                                            foreach (var item in ViewBag.orderList)
                                            {
                                                <tr>
                                                    <td>@index</td>
                                                    <td>@item.order_name</td>
                                                    <td>@item.order_time.ToString("yyyy-MM-dd")</td>
                                                    <td>@item.order_num</td>
                                                    <td>@item.tui_num</td>
                                                    @if (UserManager.Current.GetLevel >= UserLevelEnum.ProductManager)
                                                    {
                                                        <td>@item.order_price</td>
                                                        <td>@item.order_all_price</td>
                                                        <td>@item.deliver_all_price</td>
                                                        <td>@item.purchase_person</td>
                                                        <td>@item.unit</td>
                                                    }
                                                </tr>
                                                index++;
                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div><!-- /# card -->
                    </div><!-- /# column -->
                </div>
            }
            @if (UserManager.Current.GetLevel >= UserLevelEnum.ProductManager)
            {
                <div class="row">
                    <div class="@if (Model == null) { <text>col-lg-8</text>} else { <text>col-lg-12</text>} ">
                        <div class="card alert">
                            <div class="card-header">
                                <h4>
                                    发票录入
                                </h4>
                            </div>
                            <div class="card-body">
                                <div class="basic-form">
                                    <div class="form-horizontal">
                                        <div class="form-group">
                                            <label for="example-input-normal" class="col-sm-4 control-label">订单号</label>
                                            <div class="col-sm-4">
                                                @if (Model == null)
                                                {
                                                    <input id="txtPlace" name="txtPlace" class="form-control" onkeyup="SelectTip(0)">
                                                }
                                                else
                                                {
                                                    <input type="text" id="order_index" name="order_index" class="form-control" value="@ViewBag.order_index" readonly>
                                                    <input type="hidden" id="order_id" name="order_id" class="form-control" value="@ViewBag.order_id">
                                                }

                                            </div>
                                        </div>


                                        <div class="form-group">
                                            <label for="example-input-normal" class="col-sm-4 control-label">发票号</label>
                                            <div class="col-sm-4">
                                                <input type="text" class="form-control" id="invoice_index" name="invoice_index" value="@if (Model!=null) { @Model.invoice_index; } " />
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label for="example-input-normal" class="col-sm-4 control-label">发票类型</label>
                                            <div class="col-sm-4">
                                                <select class="form-control" id="invoice_type" name="invoice_type">
                                                    <option value=""></option>
                                                    <!option value="0" @if (Model != null) { if (Model.invoice_type == 0) { <text> selected</text>} }>普通发票</!option>
                                                    <!option value="1" @if (Model != null) { if (Model.invoice_type == 1) { <text> selected</text>} }>增值税专用发票</!option>
                                                </select>
                                            </div>
                                        </div>


                                        <div class="form-group">
                                            <label for="example-input-normal" class="col-sm-4 control-label">开票日期</label>
                                            <div class="col-sm-4">
                                                <input type="text" class="form-control" id="invoice_time" name="invoice_time" onclick="WdatePicker({ skin: 'whyGreen',dateFmt:'yyyy-MM-dd' })" value="@if (Model!=null) { @Model.invoice_time.ToString("yyyy-MM-dd"); }" />
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label for="example-input-normal" class="col-sm-4 control-label">金额</label>
                                            <div class="col-sm-4">
                                                <input type="text" class="form-control" id="invoice_price" name="invoice_price" value="@if (Model!=null) { @Model.invoice_price; }" placeholder="0" onchange="getPriceList()" />
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label for="example-input-normal" class="col-sm-4 control-label">税额</label>
                                            <div class="col-sm-4">
                                                <input type="text" class="form-control" id="invoice_ratio" name="invoice_ratio" value="@if (Model!=null) { @Model.invoice_ratio; }" placeholder="0" onchange="getPriceList()" />
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label for="example-input-normal" class="col-sm-4 control-label">价税统计</label>
                                            <div class="col-sm-4" id="price_div">
                                                <input type="text" class="form-control" id="invoice_all_price" name="invoice_all_price" placeholder="0" value="@if (Model!=null) { @Model.invoice_all_price; }" readonly />
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label for="example-input-normal" class="col-sm-4 control-label">付款方式</label>
                                            <div class="col-sm-4">
                                                <select class="form-control" id="pay_type" name="pay_type">
                                                    <option value=""></option>
                                                    <!option value="0" @if (Model != null) { if (Model.pay_type == 0) { <text> selected</text>} }>转账</!option>
                                                    <!option value="1" @if (Model != null) { if (Model.pay_type == 1) { <text> selected</text>} }>现金</!option>
                                                </select>
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label for="example-input-normal" class="col-sm-4 control-label">备注</label>
                                            <div class="col-sm-4">
                                                <input type="text" class="form-control" id="remark" name="remark" value="@if (Model!=null) { @Model.remark; }" />
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <div class="col-sm-offset-5">
                                                <input type="button" id="submit" name="submit" class="btn btn-primary" style=" width:12%" value="提交" />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div><!-- /# card -->
                    </div><!-- /# column -->

                    <div class="col-lg-4" style="display:@if (Model == null) {<text>block</text> } else { <text>none</text>} ">
                        <div class="card alert">
                            <div class="card-header">
                                <h4>
                                    可开票订单
                                </h4>
                            </div>
                            <hr />
                            <div class="card-body">
                                <div class="basic-form">
                                    <div class="form-horizontal">
                                        <div class="form-group">
                                            <label>订单号</label>

                                            <select class="form-control" id="order_id" name="order_id" onchange="getOrderList();txtPlace.value=options[selectedIndex].text;" size=22>
                                                <option value=""></option>
                                                @{
                                                    OrderManager OM = new OrderManager();
                                                    List<Order> objList = OM.SelectByInvoiceStatus(0);
                                                    if (objList.Count > 0)
                                                    {
                                                        for (int i = 0; i < objList.Count; i++)
                                                        {
                                                            <!option value="@objList[i].id">@objList[i].order_index</!option>
                                                        }
                                                    }
                                                }
                                            </select>
                                        </div>
                                        <hr />
                                    </div>
                                </div>
                            </div>
                        </div><!-- /# card -->
                    </div><!-- /# column -->
                </div><!-- /# row -->
            }





        </div>
    </div><!-- /# container-fluid -->
</body>
</html>


