
@{
    @model IList<Model.Sale>
    @using Model;
    @using BLL;

}
@using AspNetCoreMvcPager;
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
    <link rel="stylesheet" type="text/css" href="~/assets/css/sweetalert.css">
    <script type="text/javascript" src="~/assets/js/sweetalert-dev.js"></script>
    <script type="text/javascript" src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script type="text/javascript" src="~/My97DatePicker/WdatePicker.js"></script>
    <script type="text/javascript">
        $(function () {
            $(".sidebar ul li:nth-of-type(5)").addClass("active open")
            $(".sidebar ul li:nth-of-type(5) ul li").removeClass()
            $(".sidebar ul li:nth-of-type(5) ul li:nth-of-type(@if (ViewBag.flag == "Return") {<text>4</text> } else {<text>5</text>})").addClass("active")
        });

        function moneySubmit()
        {
            var deliver_index = $('#deliver_index').val();
            var money_onoff = $('#money_onoff').val();
            var money_way = $('#money_way').val();
            
            if (money_way < 1) {
                swal("请选择结账方式！", "", "error");
            }
            else
            {
                $.ajax({
                    type: "POST",
                    url: "/SaleReturn/MoneyEdit",
                    beforeSend: function (xhr) {
                        xhr.setRequestHeader("XSRF-TOKEN",
                            $('input:hidden[name="__RequestVerificationToken"]').val());
                    },
                    data: {
                        deliver_index: deliver_index, money_onoff: money_onoff, money_way: money_way
                    },
                    success: function (msg) {
                        if (msg == "Success") {
                            swal({ title: "执行成功!", text: "", type: "success" },
                                function () { window.location.href = '/SaleReturn/MoneyIndex'; });

                        }
                        else {
                            swal("执行失败，请检查提交内容！", "", "error");
                        }
                    },
                    error: function (msg) {
                        swal("数据获取失败！", "", "error");
                    }
                });
            }
        }

    </script>
</head>
<body>
    <div class="container-fluid" id="wrap">
        <div class="row">
            <div class="col-lg-12 p-0">
                <div class="page-header">
                    <div class="page-title">
                        <ol class="breadcrumb text-left">
                            <li><a href="/Supplier/Index">主页</a></li>
                            <li><a href="/Sale/Index">销售管理</a></li>
                            @if (ViewBag.flag == "Return")
                            {
                                <li><a href="/SaleReturn/MoneyIndex">销售结款</a></li>
                            }
                            else
                            {
                                <li><a href="/SaleReturn/MoneyHistoryIndex">历史结款记录</a></li>
                            }

                            <li class="active">销售出货开单</li>
                        </ol>
                    </div>
                </div>
            </div><!-- /# column -->
        </div><!-- /# row -->
        <div class="main-content">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card alert">
                        <div class="card-header">
                            <h4>销售结款</h4>
                        </div>
                        <br />
                        <div class="card-body">
                            <div class="form-horizontal">
                                <div class="form-group">
                                    <label class="col-sm-2 control-label">出货单号：</label>
                                    <div class="col-sm-2">
                                        <input type="text" class="form-control" id="deliver_index" name="deliver_index" value="@ViewBag.deliver_index" disabled="disabled" />
                                    </div>
                                    <label class="col-sm-2 control-label">出货公司抬头：</label>
                                    <div class="col-sm-2">
                                        <input type="text" class="form-control" value="@ViewBag.deliver_company_head" disabled="disabled" />
                                    </div>
                                    <label class="col-sm-2 control-label">订单号：</label>
                                    <div class="col-sm-2">
                                        <input type="text" class="form-control" value="@ViewBag.order_index" disabled="disabled" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-2 control-label">公司名称：</label>
                                    <div class="col-sm-2">
                                        <input type="text" class="form-control" value="@ViewBag.company_name" disabled="disabled" />
                                    </div>
                                    <label class="col-sm-2 control-label">客户订单号：</label>
                                    <div class="col-sm-2">
                                        <input type="text" class="form-control" value="@ViewBag.company_order_index" disabled="disabled" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-2 control-label">出货总数量：</label>
                                    <div class="col-sm-2">
                                        <input type="text" class="form-control" value="@ViewBag.deliverNum" disabled="disabled" />
                                    </div>
                                    @if (UserManager.Current.GetLevel >= UserLevelEnum.ProductManager)
                                    {
                                        <label class="col-sm-2 control-label">出货总金额：</label>
                                        <div class="col-sm-2">
                                            <input type="text" class="form-control" value="@ViewBag.deliverPrice" disabled="disabled" />
                                        </div>
                                    }

                                </div>
                                <div class="form-group">
                                    <label class="col-sm-2 control-label">退单总数量：</label>
                                    <div class="col-sm-2">
                                        <input type="text" class="form-control" value="@ViewBag.returnNum" disabled="disabled" />
                                    </div>
                                    @if (UserManager.Current.GetLevel >= UserLevelEnum.ProductManager)
                                    {
                                        <label class="col-sm-2 control-label">退单总金额：</label>
                                        <div class="col-sm-2">
                                            <input type="text" class="form-control" value="@ViewBag.returnPrice" disabled="disabled" />
                                        </div>
                                    }

                                </div>
                                @if (UserManager.Current.GetLevel >= UserLevelEnum.ProductManager)
                                {
                                    <div class="form-group">
                                        <label for="example-input-normal" class="col-sm-4 control-label">是否结账</label>
                                        <div class="col-sm-4">
                                            @if (UserManager.Current.GetLevel >= UserLevelEnum.Boss && ViewBag.flag=="Return")
                                            {
                                                <select class="form-control" id="money_onoff" name="money_onoff" onchange="moneyWay()">
                                                    <option value=""></option>
                                                    @{
                                                        <!option value="0" @if (ViewBag.money_way != null) { if (0 == ViewBag.money_onoff) { <text> selected</text> } } else {<text> selected</text> }>未结账</!option>
                                                        <!option value="1" @if (ViewBag.money_way != null) { if (1 == ViewBag.money_onoff) { <text> selected</text> } } else {<text> selected</text> }>已结账</!option>
                                                    }
                                                </select>
                                            }
                                            else
                                            {
                                                <input type="text" class="form-control" value="@if (ViewBag.money_way==0) { <text> 未结账</text>} else {<text> 已结账</text> } " readonly />
                                            }

                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="example-input-normal" class="col-sm-4 control-label">结账方式</label>
                                        <div class="col-sm-4">
                                            @if (UserManager.Current.GetLevel >= UserLevelEnum.Boss && ViewBag.flag == "Return")
                                            {
                                                <select class="form-control" id="money_way" name="money_way">
                                                    <option value=""></option>
                                                    @{
                                                    <!option value="1" @if (ViewBag.money_way != null) { if (1 == ViewBag.money_way) { <text> selected</text> } } else {<text> selected</text> }>月结</!option>
                                                        <!option value="2" @if (ViewBag.money_way != null) { if (2 == ViewBag.money_way) { <text> selected</text> } } else {<text> selected</text> }>现金</!option>
                                                        <!option value="3" @if (ViewBag.money_way != null) { if (3 == ViewBag.money_way) { <text> selected</text> } } else {<text> selected</text> }>小额支付</!option>
                                                    }
                                                </select>
                                            }
                                            else
                                            {
                                                <input type="text" class="form-control" value="@if (ViewBag.money_way == 1) { <text>月结</text>} else if (ViewBag.money_way == 2) {<text> 现金</text> } else if (ViewBag.money_way == 3) {<text> 小额支付</text> } " readonly />
                                            }

                                        </div>
                                    </div>
                                }
                                @if (UserManager.Current.GetLevel >= UserLevelEnum.Boss && ViewBag.flag == "Return")
                                {
                                    <div class="form-group">
                                        <div class="col-sm-offset-5">
                                            <input type="button" class="btn btn-primary" value="提交" onclick="moneySubmit()" />
                                        </div>
                                    </div>
                                }

                            </div>
                        </div>
                    </div><!-- /# card -->
                </div><!-- /# column -->
                <div class="col-lg-12">
                    <div class="card alert">
                        <div class="card-header">
                            <h4>销售出货明细</h4>
                        </div>
                        <div class="card-body">
                            <table class="table table-responsive table-hover ">
                                <thead>
                                    <tr>
                                        <th>序号</th>
                                        <th>下单明细</th>
                                        <th>下单数量</th>
                                        <th>下单时间</th>
                                        <th>需求出货时间</th>
                                        <th>实际出货数量</th>
                                        <th>实际出货时间</th>
                                        @if (UserManager.Current.GetLevel >= UserLevelEnum.ProductManager)
                                        {
                                            <th>出货单价</th>
                                            <th>出货总价</th>
                                            <th>采购人员</th>
                                            <th>需求单位</th>
                                        }

                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        int index = 1;
                                        foreach (var item in Model)
                                        {
                                    <tr>
                                        <td>@index</td>
                                        <td>@item.order_name</td>
                                        <td>@item.order_num</td>
                                        <td>@item.order_time.ToString("yyyy-MM-dd")</td>
                                        <td>@item.deliver_time.ToString("yyyy-MM-dd")</td>

                                        <td>@item.real_num</td>
                                        <td>@item.real_time.ToString("yyyy-MM-dd")</td>
                                        @if (UserManager.Current.GetLevel >= UserLevelEnum.ProductManager)
                                        {
                                            <td>@item.deliver_price</td>
                                            <td>@item.deliver_all_price</td>
                                            <td>@item.purchase_person</td>
                                            <td>@item.unit</td>
                                        }

                                    </tr>
                                            index++;
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div><!-- /# card -->
                </div><!-- /# column -->

                <div class="col-lg-12">
                    <div class="card alert">
                        <div class="card-header">
                            <h4>销售退货明细</h4>
                        </div>
                    @if (ViewBag.saleReturn!=null)
                    {
                        <div class="card-body">
                            <table class="table table-responsive table-hover ">
                                <thead>
                                    <tr>
                                        <th>序号</th>
                                        <th>退货单号</th>
                                        <th>下单明细</th>
                                        <th>下单数量</th>
                                        <th>退货数量</th>
                                        <th>退货时间</th>
                                        @if (UserManager.Current.GetLevel >= UserLevelEnum.ProductManager)
                                        {
                                            <th>退货单价</th>
                                            <th>退货总价</th>
                                        }

                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        int index1 = 1;
                                        foreach (var item in ViewBag.saleReturn)
                                        {
                                    <tr>
                                        <td>@index1</td>
                                        <td>@item.return_index</td>
                                        <td>@item.order_name</td>
                                        <td>@item.order_num</td>

                                        <td>@item.return_num</td>
                                        <td>@item.return_time.ToString("yyyy-MM-dd")</td>
                                        @if (UserManager.Current.GetLevel >= UserLevelEnum.ProductManager)
                                        {
                                            <td>@item.return_price</td>
                                            <td>@item.return_all_price</td>
                                        }

                                    </tr>
                                            index1++;
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                        
                    </div><!-- /# card -->
                </div><!-- /# column -->
            </div><!-- /# row -->
        </div>
    </div><!-- /# container-fluid -->

</body>
</html>




