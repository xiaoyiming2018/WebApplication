@{
    @model IList<Model.SaleReturn>
    @using Model;
    @using BLL;

}
@using AspNetCoreMvcPager;
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
    <link rel="stylesheet" type="text/css" href="~/assets/css/sweetalert.css">
    <script type="text/javascript" src="~/assets/js/sweetalert-dev.js"></script>
    <script type="text/javascript" src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script type="text/javascript" src="~/My97DatePicker/WdatePicker.js"></script>
    <script type="text/javascript">
        $(function () {
            $(".sidebar ul li:nth-of-type(5)").addClass("active open")
            $(".sidebar ul li:nth-of-type(5) ul li").removeClass()
            $(".sidebar ul li:nth-of-type(5) ul li:nth-of-type(3)").addClass("active")
        });

        
    </script>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12 p-0">
                <div class="page-header">
                    <div class="page-title">
                        <ol class="breadcrumb text-left">
                            <li><a href="/Supplier/Index">主页</a></li>
                            <li><a href="/Sale/Index">销售管理</a></li>
                            <li class="active">历史退货记录</li>
                        </ol>
                    </div>
                </div>
            </div><!-- /# column -->
        </div><!-- /# row -->
        <div class="main-content">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card alert">
                        <div class="card-header">
                            <form class="form-horizontal" action="/SaleReturn/ReturnHistoryIndex" method="post" id="myfrom">
                                <div class="form-inline">
                                    <div class="form-group">
                                        <label>退&nbsp;货&nbsp;&nbsp;单&nbsp;号：</label>
                                        <input id="return_index" name="return_index" type="text" class="form-control" style="height:36px" value="@ViewBag.return_index" />
                                    </div>
                                    <div class="form-group">
                                        <label>出货单号：</label>
                                        <input id="deliver_index" name="deliver_index" type="text" class="form-control" style="height:36px" value="@ViewBag.deliver_index" />
                                    </div>


                                    <div class="form-group">
                                        <label>订&nbsp;&nbsp;单&nbsp;&nbsp;号：</label>
                                        <input id="order_index" name="order_index" type="text" class="form-control" style="height:36px" value="@ViewBag.order_index" />
                                    </div>
                                    <div class="form-group">
                                        <label>客户名称：</label>
                                        <input id="company_name" name="company_name" type="text" class="form-control" style="height:36px" value="@ViewBag.company_name" />
                                    </div>
                                </div>
                                <br />
                                <div class="form-inline">
                                    <div class="form-group">
                                        <label>客户订单号：</label>
                                        <input id="company_order_index" name="company_order_index" type="text" class="form-control" style="height:36px" value="@ViewBag.company_order_index" />
                                        <div class="form-group">
                                            <label>开始时间：</label>
                                            <input id="start_time" name="start_time" type="text" class="form-control" style="height:36px" onclick="WdatePicker({ skin: 'whyGreen',dateFmt:'yyyy-MM-dd' })" value="@ViewBag.start_time" />
                                        </div>
                                        <div class="form-group">
                                            <label>结束时间：</label>
                                            <input id="end_time" name="end_time" type="text" class="form-control" style="height:36px" onclick="WdatePicker({ skin: 'whyGreen',dateFmt:'yyyy-MM-dd' })" value="@ViewBag.end_time" />
                                        </div>
                                        <div class="form-group">
                                            <input type="submit" value="查询" class="btn btn-primary" style="width:80px" />
                                        </div>
                                    </div>
                                </div>

                                <br />


                            </form>
                        </div>
                        <div class="card-body">
                            <table class="table table-responsive table-hover ">
                                <thead>
                                    <tr>
                                        <th>编号</th>
                                        <th>退货单号</th>
                                        <th>出货单号</th>
                                        <th>订单号</th>
                                        <th>客户公司</th>
                                        <th>客户订单号</th>
                                        <th>订单总数</th>


                                        <th>出货总数</th>
                                        <th>退货总数</th>
                                        @if (UserManager.Current.GetLevel >= UserLevelEnum.Boss)
                                        {
                                            <th>退货总价</th>
                                        }
                                        <th>确认时间</th>
                                        <th>退单详情</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        int index = 1;
                                        foreach (var item in Model)
                                        {
                                    <tr>
                                        <td>@index</td>
                                        <td>@item.return_index</td>
                                        <td>@item.deliver_index</td>
                                        <td>@item.order_index</td>
                                        <td>@item.company_name</td>
                                        <td>@item.company_order_index</td>
                                        <td>@item.order_num</td>

                                        <td>@item.real_num</td>
                                        <td>@item.return_num</td>
                                        @if (UserManager.Current.GetLevel >= UserLevelEnum.Boss)
                                        {
                                            <td>@item.return_all_price</td>
                                        }
                                        <td>@item.confirm_time</td>
                                        <td>
                                            <button class="btn btn-primary" onclick="window.location.href = '/SaleReturnSeq/Index?return_index=@item.return_index&confirm_time=@item.confirm_time'">退货详情</button>
                                        </td>
                                    </tr>
                                            index++;
                                        }
                                    }
                                </tbody>
                            </table>
                            <div class="page-nav" id="pageIndex">@Html.Raw(PagerHtmlString.Pager(ViewBag.model, "SaleReturn", "ReturnHistoryIndex", true))</div>
                        </div>
                    </div><!-- /# card -->
                </div><!-- /# column -->
            </div><!-- /# row -->
        </div>
    </div><!-- /# container-fluid -->
</body>
</html>


